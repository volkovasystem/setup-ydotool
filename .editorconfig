root = true

[*]
charset = utf-8

indent_style = tab
indent_size = 4

trim_trailing_whitespace = true

end_of_line = crlf
insert_final_newline = true

max_line_length = 100

[.npmrc]
end_of_line = lf

[*.sh]
end_of_line = lf

[*.list]
end_of_line = lf

[*.dockerfile]
end_of_line = lf

[*.configure]
end_of_line = lf

[*.env]
end_of_line = lf

[*.yaml]
indent_style = space
indent_size = 4

end_of_line = lf
